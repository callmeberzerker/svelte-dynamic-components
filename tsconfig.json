{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": ["src/**/*", "src/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "svelte"],
    "typeRoots": ["src/@types", "node_modules/@types"],
    "paths": {
      "src/*": ["src/*"]
    }
  }
}